# cleanbaja's sxhkd config :-)
 
# Basics -------------------------------------

# Terminal emulator
super + Return
	urxvt

# Launch Chromium
super + d
	chromium

# Program launcher
super + @space
	rofi -show run

# Reload sxhkd config
super + Escape
	pkill -USR1 -x sxhkd

# Launch Nautilus
super + n
	nautilus

# Launch Emacs
super + e
	emacsclient -c -a emacs

# Edit sxkhd/bspwm configs
super + shift + e
	urxvt vim -p ~/.config/sxhkd/sxhkdrc ~/.config/bspwm/bspwmrc

# Hadware Hotkeys ----------------------------

XF86MonBrightness{Up,Down}
	brightnessctl s 10%{+,-}

XF86Audio{Raise,Lower}Volume
	pulsemixer --change-volume {+,-}10

XF86AudioMute
	pulsemixer --toggle-mute


# TODO: Finish hardware hotkeys

# BSPWM hotkeys ----------------------------ее--

# Quit/Restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close/Kill windows
super + {_,shift + }w
	bspc node -{c,k}

# Alternate between layouts
super + m
	bspc desktop -l next

# Swap the current and biggest window
super + g
	bspc node -s biggest.window


# Window State/Flags -------------------------

# Set window mode
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set window flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


# Focus keys ---------------------------------

# Focus a window (vim keys)
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus for the given jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# Focus next/previous window
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# Focus next/previos desktop (same as dwm tabs)
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# Focus the last window/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Focus the older or newer node in the history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus/Send window to a given desktop
super + {_,shift + }{1-5}
	bspc {desktop -f,node -d} '^{1-5}'


# Window Properties ------------------------------

# Preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused window
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


